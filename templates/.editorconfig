# EditorConfig is awesome: http://EditorConfig.org

# top-most EditorConfig file
root = true

[*]
max_line_length=120
end_of_line=lf
trim_trailing_whitespace=true
insert_final_newline=true
charset=utf-8
indent_style=space
indent_size=4

[*.{js,json,xml,html,html.in,jshintrc,yml,yaml}]
indent_size=2

[COMMIT_EDITMSG]
max_line_length=72

# Makefiles must use tabs
[{Makefile.*,mk*.inc,makefile,Makefile,GNUmakefile,*.mk}]
indent_style = tab
tab_width=4
