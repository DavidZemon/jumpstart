# EditorConfig is awesome: http://EditorConfig.org

# top-most EditorConfig file
root = true

[*]
max_line_length=80
end_of_line=lf
trim_trailing_whitespace=true
insert_final_newline=true
charset=utf-8
indent_style=space
indent_size=4

[*.{js,json,xml,html,html.in,jshintrc,yml,yaml}]
indent_size=2

# Makefiles must use tabs
[Makefile]
indent_style = tab
